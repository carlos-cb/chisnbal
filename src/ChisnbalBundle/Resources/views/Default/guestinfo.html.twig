{% extends 'font.html.twig' %}

        {% block stylesheets %}
            {{ parent() }}
            <link rel="stylesheet" href="{{ asset('bundles/chisnbal/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/chisnbal/css/orderinfo.css') }}" />
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
        {% endblock %}
{% block content %}

    <div class="container" style="padding-left: calc(12% + 0px);
    padding-right: calc(12% + 0px);">
        <div class="line mod">
            <div class="unit size1of1">
                <h2>Tramita pedido</h2>
            </div>
        </div>
        <div class="line mod">
            <div class="radioGroup">
                <h2>Método de envío</h2>
                <div>
                    <input id="radio-1" class="radio-custom" name="radio-group" type="radio" checked>
                    <label for="radio-1" class="radio-custom-label">Recoger en tienda: En la tienda que elijas en 2-3 días laborables. Gratuito</label>
                </div>
                <div>
                    <input id="radio-2" class="radio-custom" name="radio-group" type="radio">
                    <label for="radio-2" class="radio-custom-label">Estándar: En 2-3 días laborables. 3,95 EUR Gratuito (PEDIDOS A PARTIR DE 30 EUR)</label>
                </div>
                <div>
                    <input id="radio-3" class="radio-custom" name="radio-group" type="radio">
                    <label for="radio-3" class="radio-custom-label">Express: En 24-48 horas (días laborables). 5,95 EUR</label>
                </div>
            </div>
        </div>
        <div class="line mod">
            <div class="radioGroup">
                <h2>DATOS DE CONTACTO</h2>
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="inputemail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtel" class="col-sm-2 control-label">Teléfono</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtel" placeholder="Teléfono">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputname" class="col-sm-2 control-label">Nombre</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputname" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Dirección</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputaddress" placeholder="Dirección">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputpost" class="col-sm-2 control-label">Código postal</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputpost" placeholder="Código postal">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Localidad</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputlocal" placeholder="Localidad">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Método de pago</label>
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group" style="display: none">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Seguir</button>
                        </div>
                    </div>
                    <br><br>
                    <div class="">
                        <div class="unit size1of1">
                            <div class="actions fLeft">
                                <button id="backCheckoutShippingBt" type="button" value="Volver" class="button butBack butWhite gaViewEvent" data-ga-props="{action:'Volver'}">
                                    <i class="icon icon-arrow-left"></i>
                                    <span>Volver</span>
                                </button>
                            </div>
                            <div class="actions fRight">
                                <button id="checkoutPaymentBt" type="submit" value="FINALIZAR PEDIDO" class="button butBlack authPayment gaTrack gaViewEvent" data-ga-props="{action:'Autorizar_Pago'}">
                                    <span>FINALIZAR PEDIDO</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>


{% endblock %}
