{% block content %}
    <h1 class="sub-header">产品分类管理</h1>
    <br>
    <ul>
        <li>
            <a href="{{ path('category_new') }}" class="button button-rounded button-inverse">创建新产品分类</a>
        </li>
    </ul>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>产品分类名西语</th>
            <th>产品分类名英语</th>
            <th>备注</th>
            <th>是否显示</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.categoryNameEs }}</td>
                <td>{{ category.categoryNameEn }}</td>
                <td>{{ category.description }}</td>
                <td>{% if category.isShow %}
                        显示<br>
                        <a href="{{ path('category_changeShow', { 'id': category.id }) }}" class="button button-tiny button-highlight">切换</a>
                    {% else %}
                        不显示<br>
                        <a href="{{ path('category_changeShow', { 'id': category.id }) }}" class="button button-tiny button-action">切换</a>
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="button button-tiny button-primary">修改</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
