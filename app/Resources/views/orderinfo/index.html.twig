{% extends 'ChisnbalBundle:BackEnd:index.html.twig' %}

{% block menuslide %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('chisnbal_homepage_admin') }}">总览 <span class="sr-only">(current)</span></a></li>
        <li><a href="#">报告</a></li>
        <li><a href="#">分析</a></li>
    </ul>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('user_index') }}">用户管理</a></li>
        <li><a href="{{ path('category_index') }}">分类管理</a></li>
        <li><a href="{{ path('product_index') }}">产品管理</a></li>
        <li><a href="{{ path('select_new') }}">新品选择</a></li>
        <li class="active"><a href="{{ path('orderinfo_index') }}">订单管理</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="sub-header">订单管理</h1>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>订单号</th>
            <th>收货人姓名</th>
            <th>产品费用</th>
            <th>运输费用</th>
            <th>总费用</th>
            <th>付款方式</th>
            <th>订单生成时间</th>
            <th>已经确认</th>
            <th>已经发货</th>
            <th>已经完成</th>
            <th>订单状态</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for orderInfo in orderInfos %}
            <tr>
                <td>{{ orderInfo.id }}</a></td>
                <td>{{ orderInfo.receiverName }}</td>
                <td>{{ orderInfo.goodsFee }}</td>
                <td>{{ orderInfo.shipFee }}</td>
                <td>{{ orderInfo.totalPrice }}</td>
                <td>{% if orderInfo.payType==1 %}门店付款{% endif %}{% if orderInfo.payType==2 %}银行转账{% endif %}{% if orderInfo.payType==3 %}快递到付{% endif %}</td>
                <td>{% if orderInfo.orderDate %}{{ orderInfo.orderDate|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if orderInfo.isConfirmed %}Yes{% else %}No{% endif %}</td>
                <td>{% if orderInfo.isSended %}Yes{% else %}No{% endif %}<br>
                    <a href="{{ path('orderinfo_delivered', { 'id': orderInfo.id }) }}"></a>
                    <a type="button" data-toggle="modal" data-target="#myModal" style="cursor: pointer;">
                        已发货
                    </a>
                <td>{% if orderInfo.isOver %}Yes{% else %}No{% endif %}<br>
                    <a href="{{ path('orderinfo_success', { 'id': orderInfo.id }) }}" onclick="return confirm('确定订单已完成?')">已完成</a>
                </td>
                <td>{{ orderInfo.state }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('orderinfo_show', { 'id': orderInfo.id }) }}">查看订单详情</a>
                        </li>
                        <li>
                            <a href="{{ path('orderitem_index', { 'orderInfoId': orderInfo.id }) }}">查看货物列表</a>
                        </li>
                        <li>
                            <a href="{{ path('orderitem_cancelled', { 'id': orderInfo.id }) }}"  onclick="return confirm('确定取消订单?')">取消订单</a>
                        </li>
                    </ul>
                </td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel">发货信息</h4>
                        </div>
                        <form method="post" action="{{ path('orderinfo_delivered') }}">
                        <div class="modal-body">
                            <input name="numeroEnvio" type="text" class="form-control" required="required" placeholder="快递单号">
                            <input type="hidden" name="orderInfoId" value="{{ orderInfo.id }}">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                            <button type="submit" class="btn btn-primary">确定</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}