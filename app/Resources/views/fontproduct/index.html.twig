{% extends 'ChisnbalBundle:BackEnd:index.html.twig' %}

{% block menuslide %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('chisnbal_homepage_admin') }}">总览  <span class="sr-only">(current)</span></a></li>
        <li><a href="#">报告</a></li>
        <li><a href="#">分析</a></li>
    </ul>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('user_index') }}">用户管理</a></li>
        <li><a href="{{ path('category_index') }}">分类管理</a></li>
        <li><a href="{{ path('product_index') }}">产品管理</a></li>
        <li><a href="{{ path('select_new') }}">新品选择</a></li>
        <li><a href="{{ path('orderinfo_index') }}">订单管理</a></li>
        <li class="active"><a href="{{ path('fontproduct_index') }}">首页产品</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="sub-header">首页产品管理</h1>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>名称</th>
                <th>照片</th>
                <th>备注</th>
                <th>所对应ID</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for fontProduct in fontProducts %}
            <tr>
                <td>{{ fontProduct.id }}</td>
                <td>{{ fontProduct.name }}</td>
                <td><a href="{{ asset('uploads/fotos/' ~ fontProduct.foto) }}"><img src="{{ asset('uploads/fotos/' ~ fontProduct.foto) }}" height="100px" width="100px"></a></td>
                <td>{{ fontProduct.description }}</td>
                <td>{{ fontProduct.url }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('fontproduct_edit', { 'id': fontProduct.id }) }}" class="button button-tiny button-primary">修改</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
