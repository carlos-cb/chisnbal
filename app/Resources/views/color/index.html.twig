{% extends 'ChisnbalBundle:BackEnd:index.html.twig' %}

{% block menuslide %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('chisnbal_homepage_admin') }}">总览  <span class="sr-only">(current)</span></a></li>
        <li><a href="#">报告</a></li>
        <li><a href="#">分析</a></li>
    </ul>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('user_index') }}">用户管理</a></li>
        <li><a href="{{ path('category_index') }}">分类管理</a></li>
        <li class="active"><a href="{{ path('product_index') }}">产品管理</a></li>
        <li><a href="{{ path('select_new') }}">新品选择</a></li>
        <li><a href="{{ path('orderinfo_index') }}">订单管理</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="sub-header">颜色管理</h1>
    <h3><a href="{{ path('product_edit', { 'id': product.id }) }}">产品编号：{{ product.codigo }}</a></h3>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>颜色名西语</th>
            <th>颜色名英语</th>
            <th>产品颜色图片</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.colorNameEs }}</td>
                <td>{{ color.colorNameEn }}</td>
                <td><a href="{{ asset('uploads/fotos/' ~ color.colorFoto) }}"><img src="{{ asset('uploads/fotos/' ~ color.colorFoto) }}" height="120px" width="100px"></a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('color_edit', { 'id': color.id, 'productId': product.id }) }}">修改</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('color_new', { 'productId': product.id }) }}" class="button button-rounded">创建新产品颜色</a>  请保持同产品的每张颜色图片尺寸相同（长方形）！
        </li>
    </ul>
{% endblock %}
