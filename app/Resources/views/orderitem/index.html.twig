{% extends 'ChisnbalBundle:BackEnd:index.html.twig' %}

{% block menuslide %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('chisnbal_homepage_admin') }}">总览 <span class="sr-only">(current)</span></a></li>
        <li><a href="#">报告</a></li>
        <li><a href="#">分析</a></li>
    </ul>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('user_index') }}">用户管理</a></li>
        <li><a href="{{ path('category_index') }}">分类管理</a></li>
        <li><a href="{{ path('product_index') }}">产品管理</a></li>
        <li><a href="{{ path('select_new') }}">新品选择</a></li>
        <li class="active"><a href="{{ path('orderinfo_index') }}">订单管理</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1 class="sub-header">订单货物列表</h1>
    <h3><a href="{{ path('orderinfo_show', { 'id': orderInfo.id }) }}">订单编号：{{ orderInfo.id }}</a></h3>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>产品编号</th>
            <th>产品名</th>
            <th>颜色</th>
            <th>数量(包/箱)</th>
            <th>单位</th>
            <th>总件数</th>
        </tr>
        </thead>
        <tbody>
        {% for orderItem in orderItems %}
            <tr>
                <td>{{ loop.index }}</a></td>
                <td>{{ orderItem.product.codigo }}</td>
                <td>{{ orderItem.product.productNameEs }}</td>
                <td>{{ orderItem.colorName }}</td>
                <td>{{ orderItem.quantity }}</td>
                <td>{{ orderItem.unit }}</td>
                {% set foo = orderItem.quantity * orderItem.product.unit %}
                <td>{{ foo }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <ul>
        <li>
            <a href="{{ path('orderinfo_index') }}" class="button button-rounded">返回订单列表</a>
            <button class="button button-rounded button-primary" onclick="window.print();"><i class="fa fa-print"></i> 打印</button>
        </li>
        <br>
    </ul>
{% endblock %}